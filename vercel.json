{
  "version": 2,
  "name": "stackoverflow",
  "env": {
    "DATABASE_URL": "@database_url",
    "JWT_SECRET": "@jwt_secret"
  },
  "builds": [
    { "src": "client/package.json", "use": "@vercel/static" },
    { "src": "server/index.js", "use": "@vercel/node" }
  ],    
  "routes": [
    { "src": "/api/?(.*)", "dest": "/server/server.js" },
    { "src": "/.*", "dest": "/client" }
  ]
}
